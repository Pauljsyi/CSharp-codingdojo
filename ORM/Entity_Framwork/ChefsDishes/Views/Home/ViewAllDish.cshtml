@{
    ViewData["Title"] = "Home Page";
}

@model List<Dish>
<div class="text-center">
    <h1>Check out our roster of chefs!</h1>
    <table class="table" bordered >
        <thead>
            <tr>
            <th>Dish Name</th>
            <th>Chef's Name</th>
            <th>Tastiness</th>
            <th>Calories</th>
            </tr>

        </thead>
        <tbody>
            @foreach(Dish d in Model)
            {
                <tr>
                    <td>@d.DishName</td>
                    <td>@d.Creator.FirstName @d.Creator.LastName</td>
                    <td>@d.Tastiness</td>
                    <td>@d.NumOfCalories</td>
                </tr>
            }
        </tbody>
    </table>

</div>
