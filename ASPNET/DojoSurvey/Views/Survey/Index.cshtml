<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <title>A Web Page</title>
</head>
<body>
    <div class="container">
        @model DojoSurvey.Models.Survey
        <form asp-action="FormSubmission" asp-controller="Survey" method="post">
            
            <div class="form-group">
                <label asp-for="name">Your Name:</label>
                <input class="form-control" asp-for="name">
            </div>
            <span asp-validation-for="name"></span>
            <div class="form-group">
                <label asp-for="location">Dojo Location:</label>
                <select class="form-select" asp-for="location">
                    <option value="san jose">San Jose</option>
                    <option value="burbank">Burbank</option>
                    <option value="bellevue">Bellevue</option>
                </select>
            </div>
            <span asp-validation-for="location"></span>
            <div class="form-group">
                <label asp-for="language">Favorite Language:</label>
                <select class="form-select" asp-for="language">
                    <option value="javascript">JavaScript</option>
                    <option value="c#">C#</option>
                    <option value="python">Python</option>
                    <option value="java">Java</option>
                </select>
            </div>
            <span asp-validation-for="language"></span>
            <div class="form-group">
                <label asp-for="comments">Comments (optional):</label>
                <textarea class="form-control" asp-for="comments" cols="5" rows="5"></textarea>
            </div>
            <button class="btn btn-danger">Submit</button>
        </form>
    </div>
</body>
</html>